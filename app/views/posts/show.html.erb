<% end %>

<ul>
<% @comments.each do |comment| %>
  <li>
    [<%= comment.user.nickname %>]
    <%= comment.content %>
   <%= link_to "刪除", comment, method: 'delete', data: { confirm: '確認？' } %>
  </li>
<% end %>
</ul>